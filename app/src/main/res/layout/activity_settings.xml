<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackgroundColor"
    tools:context="org.studia.barterapplication.activities.SettingsActivity">


    <Button
        android:id="@+id/feedbackBtn"
        android:layout_width="140pt"
        android:layout_height="40pt"
        android:layout_marginBottom="35dp"
        android:text="@string/send_us_feedback"
        app:backgroundTint="#1A5F7A"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/notificationBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableStart="@drawable/receive_mail"/>


    <Button
        android:id="@+id/logOutBtn"
        android:layout_width="140pt"
        android:layout_height="40pt"
        android:layout_marginBottom="100dp"
        android:text="@string/logout"
        app:backgroundTint="#1A5F7A"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableStart="@drawable/logout"/>

    <Button
        android:id="@+id/changePasswordBtn"
        android:layout_width="140pt"
        android:layout_height="40pt"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="20dp"
        android:text="@string/change_password"
        android:textColor="@color/white"
        app:backgroundTint="#1A5F7A"
        app:layout_constraintBottom_toTopOf="@+id/feedbackBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableStart="@drawable/key_change"/>

    <Button
        android:id="@+id/notificationBtn"
        android:layout_width="140pt"
        android:layout_height="40pt"
        android:layout_marginBottom="35dp"
        android:text="@string/notification_settings"
        app:backgroundTint="#1A5F7A"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/logOutBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableStart="@drawable/notification"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/settings_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>